<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>

<form method="POST">
    <input type="text" name="org_name" />
    <input type="text" name="website" />
    <input type="submit" value="Submit" />
</form>

{{#each organisation}}
    <p>{{this.org_name}}</p>
    <p>{{this.website}}</p>
    <a href="/edit/{{this.org_id}}">Edit</a>
{{/each}}

